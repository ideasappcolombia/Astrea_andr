<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_app"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="@string/conocimiento"
            android:id="@+id/textView"
            android:textSize="40dp"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="center"
            android:textColor="#7D192C" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/inicio"
            android:background="@drawable/inicio"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="70dp" />

        <ImageButton
            android:id="@+id/ayuda"
            android:background="@drawable/ayuda"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="70dp" />

        <ImageButton
            android:id="@+id/acerca"
            android:background="@drawable/acerca"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="70dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="750dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:background="@drawable/logo_negro"
                android:layout_gravity="left" />

            <ImageButton
                android:id="@+id/otras_apps"
                android:background="@drawable/otras_apps"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
